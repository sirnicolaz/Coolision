/**
 * Top menu for store
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<link rel="stylesheet" type="text/css" href="<?php echo $this->getSkinUrl('css/subMenu.css');?>" media="all" />
<div class="header-nav-container">
    <div class="header-nav">
        <h4 class="no-display"><?php echo $this->__('Category Navigation:') ?></h4>
        <ul id="nav">
		<?php $numLi = 0; ?>
        <?php foreach ($this->getStoreCategories() as $_category): ?> <!-- scorre tutte le categorie dello store -->
	    <?php foreach ($_category->getChildren() as $_subCategory): ?>
		  <?php $numLi++; ?>
	      <?php echo $this->drawItem($_subCategory) ?>
	    <?php endforeach; ?>
        <?php endforeach; ?>
        </ul>
    </div>
    <?php echo $this->getChildHtml('topLeftLinks') ?>
</div>
<script type="text/javascript" language="JavaScript">
	$menuLi = document.getElementById('nav').getElementsByTagName('li');
	$liNum = <?php echo $numLi;?>;
	$liWidth = 100/$liNum;
	$j = 0;
	$first = true;
	for($i=0; $i<$menuLi.length; $i++){
		if(document.getElementById('nav').getElementsByTagName('li')[$i].className.indexOf("level0") != -1){
			document.getElementById('nav').getElementsByTagName('li')[$i].style.width = $liWidth + "%";
			if($first){
				$j = $i;
				$first=false;
			}
		}
	}
	document.getElementById('nav').getElementsByTagName('li')[$j].id = "first";
</script>